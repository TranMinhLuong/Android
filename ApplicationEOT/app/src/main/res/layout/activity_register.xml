<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarres"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#26C6DA"
        android:theme="@style/customfontrobotoretheme"
        app:title="Đăng ký">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_baseline_person_add_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_account_circle_black"/>
            <EditText
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edtuserres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#000000"
                android:gravity="start|top"
                android:hint="Username"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_lock_black"/>
            <EditText
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edtpassres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#000000"
                android:gravity="start|top"
                android:hint="Password"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_baseline_person_black"/>
            <EditText
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edtfullnameres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#000000"
                android:gravity="start|top"
                android:hint="Full Name"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_baseline_email_black"/>
            <EditText
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edtemailres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#000000"
                android:gravity="start|top"
                android:hint="Email"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <Button
            android:fontFamily="@font/robotoregular"
            android:id="@+id/btnres"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:text="Register" />

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/robotoregular"
                android:id="@+id/txtlog"
                android:gravity="center"
                android:textColor="#f20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>