<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarlogin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#26C6DA"
        android:theme="@style/customfontrobotoretheme"
        app:title="Đăng nhập">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_user"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_account_circle_black"/>
            <EditText
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edtuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#000000"
                android:gravity="start|top"
                android:hint="Username"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_lock_black"/>
            <EditText
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edtpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#000000"
                android:gravity="start|top"
                android:hint="Password"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_margin="10dp"
                android:id="@+id/cbsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"/>

            <TextView
                android:fontFamily="@font/robotoregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:text="Lưu mật khẩu!"
                android:textSize="22dp" />
        </LinearLayout>

        <Button
            android:fontFamily="@font/robotoregular"
            android:id="@+id/btnlogin"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:text="Login" />

        <TextView
            android:id="@+id/txtten"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f20"
            android:text="TextView" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/robotoregular"
                android:id="@+id/txtregi"
                android:gravity="center"
                android:textColor="#f20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản?"/>

            <TextView
                android:id="@+id/txtbackmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/robotoregular"
                android:gravity="center"
                android:text="Quay lại trang chủ!"
                android:textColor="#f20" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>